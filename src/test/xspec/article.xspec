<!-- Tests:
     appendix article
-->

<x:scenario label="When converting an article">
  <x:context xmlns="http://docbook.org/ns/docbook">
    <article>
      <info>
        <title>Article title</title>
      </info>
      <para>Content</para>
    </article>
  </x:context>
  <x:expect xmlns="http://www.w3.org/1999/xhtml" label="an article should be created">
    <body class="home">
        <nav class="top"/>
        <main>
          <article class="article component">
            <header>
              <h1>Article title</h1>
            </header>
            <p>Content</p>
          </article>
        </main>
        <nav class="bottom"/>
      </body>
  </x:expect>
</x:scenario>

