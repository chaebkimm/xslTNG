<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
               stylesheet="../xspec-xslt/xspec-driver.xsl">

<!-- Tests:
     chapter xref
-->

<x:scenario label="When converting a chapter with a label">
  <x:context xmlns="http://docbook.org/ns/docbook">
    <chapter label="Boring">
      <info>
        <title>Some title</title>
      </info>
      <para>Content</para>
    </chapter>
  </x:context>
  <x:expect xmlns="http://www.w3.org/1999/xhtml" label="an db-label is added to the chapter">
     <body class="home">
        <nav class="top"/>
         <main>
           <article class="chapter component" db-label="Boring">...</article>
         </main>
        <nav class="bottom"/>
       </body>
  </x:expect>
</x:scenario>

<x:scenario label="When converting a chapter with a status">
  <x:context xmlns="http://docbook.org/ns/docbook">
    <chapter status="draft">
      <info>
        <title>Some title</title>
      </info>
      <para>Content</para>
    </chapter>
  </x:context>
  <x:expect xmlns="http://www.w3.org/1999/xhtml" label="the status becomes a class">
    <body class="home draft">
        <nav class="top"/>
        <main>
          <article class="chapter component draft">...</article>
        </main>
        <nav class="bottom"/>
      </body>
  </x:expect>
</x:scenario>

