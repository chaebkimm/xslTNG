<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
               stylesheet="../xspec-xslt/xspec-driver.xsl">

<!-- Tests:
     preface
-->

<x:scenario label="When converting an preface">
  <x:context xmlns="http://docbook.org/ns/docbook">
    <preface>
      <info>
        <title>Preface</title>
      </info>
      <para>Content</para>
    </preface>
  </x:context>
  <x:expect xmlns="http://www.w3.org/1999/xhtml" label="an preface should be created">
    <body class="home">
        <nav class="top"/>
        <main>
          <article class="component preface">
            <header>
              <h1>Preface</h1>
            </header>
            <p>Content</p>
          </article>
        </main>
        <nav class="bottom"/>
      </body>
  </x:expect>
</x:scenario>

<x:scenario label="When converting an preface with a label">
  <x:context xmlns="http://docbook.org/ns/docbook">
    <preface label="Boring">
      <info>
        <title>Some title</title>
      </info>
      <para>Content</para>
    </preface>
  </x:context>
  <x:expect xmlns="http://www.w3.org/1999/xhtml" label="an db-label is added to the preface">
    <body class="home">
        <nav class="top"/>
        <main>
          <article class="component preface" db-label="Boring">...</article>
        </main>
        <nav class="bottom"/>
      </body>
  </x:expect>
</x:scenario>

<x:scenario label="When converting an preface with a status">
  <x:context xmlns="http://docbook.org/ns/docbook">
    <preface status="draft">
      <info>
        <title>Some title</title>
      </info>
      <para>Content</para>
    </preface>
  </x:context>
  <x:expect xmlns="http://www.w3.org/1999/xhtml" label="the status becomes a class">
    <body class="home draft">
        <nav class="top"/>
        <main>
          <article class="component draft preface">...</article>
        </main>
        <nav class="bottom"/>
      </body>
  </x:expect>
</x:scenario>

</x:description>
