<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:f="http://docbook.org/ns/docbook/functions"
               xmlns:x="http://www.jenitennison.com/xslt/xspec"
               stylesheet="../xspec-xslt/xspec-driver.xsl">

<x:scenario label="The empty sequence is the length">
   <x:call function="f:spaces">
     <x:param select="()"/>
   </x:call>
   <x:expect label="expect the empty sequence" select="()"/>
</x:scenario>

<x:scenario label="The length is zero">
   <x:call function="f:spaces">
     <x:param select="0"/>
   </x:call>
   <x:expect label="expect the empty string" select="''"/>
</x:scenario>

<x:scenario label="The length is negative">
   <x:call function="f:spaces">
     <x:param select="-3"/>
   </x:call>
   <x:expect label="expect the empty sequence" select="()"/>
</x:scenario>

<x:scenario label="The length is a positive integer (1)">
   <x:call function="f:spaces">
     <x:param select="1"/>
   </x:call>
   <x:expect label="expect a string of that length" select="' '"/>
</x:scenario>

<x:scenario label="The length is a positive integer (12)">
   <x:call function="f:spaces">
     <x:param select="12"/>
   </x:call>
   <x:expect label="expect a string of that length" select="'            '"/>
</x:scenario>

<x:scenario label="The length is castable to a positive integer">
   <x:call function="f:spaces">
     <x:param select="'3'"/>
   </x:call>
   <x:expect label="expect a string of that length" select="'   '"/>
</x:scenario>

<x:scenario label="The length isn't numeric'">
   <x:call function="f:spaces">
     <x:param select="'test'"/>
   </x:call>
   <x:expect label="expect a string equal in length to the length of the string value of the length argument" select="'    '"/>
</x:scenario>

<x:scenario label="The length is a sequence of several items'">
   <x:call function="f:spaces">
     <x:param select="('a', 'b', '3')"/>
   </x:call>
   <x:expect label="expect them to be concatenated" select="'   '"/>
</x:scenario>

<x:scenario label="The length is a sequence of several items'">
   <x:call function="f:spaces">
     <x:param select="('0', '1', '0')"/>
   </x:call>
   <x:expect label="expect them to be concatenated" select="'          '"/>
</x:scenario>

<x:scenario label="The uri scheme is 'https'">
   <x:call function="f:uri-scheme">
     <x:param select="'https://docbook.org/'"/>
   </x:call>
   <x:expect label="expect the scheme" select="'https'"/>
</x:scenario>

<x:scenario label="The uri scheme is the empty sequence">
   <x:call function="f:uri-scheme">
     <x:param select="'/just/a/path'"/>
   </x:call>
   <x:expect label="expect the scheme" select="()"/>
</x:scenario>

<x:scenario label="If the path is a direct extension of the base">
   <x:call function="f:relative-path">
     <x:param select="'/a/base/uri/path/'"/>
     <x:param select="'/a/base/uri/path/with/more'"/>
   </x:call>
   <x:expect label="expect the relative path" select="'with/more'"/>
</x:scenario>

<x:scenario label="If the path is an extension of a shorter prefix">
   <x:call function="f:relative-path">
     <x:param select="'/a/base/uri/path/'"/>
     <x:param select="'/a/base/uri/with/other'"/>
   </x:call>
   <x:expect label="expect the relative path" select="'../with/other'"/>
</x:scenario>

<x:scenario label="If the URI is absolute">
   <x:call function="f:relative-path">
     <x:param select="'/a/base/uri/path/'"/>
     <x:param select="'https://docbook.org/'"/>
   </x:call>
   <x:expect label="expect the URI" select="'https://docbook.org/'"/>
</x:scenario>

</x:description>
