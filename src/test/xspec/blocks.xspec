<x:scenario label="When converting an acknowledgements">
  <x:context xmlns="http://docbook.org/ns/docbook">
    <acknowledgements>
      <info>
        <title>Some title</title>
      </info>
      <para>Content</para>
    </acknowledgements>
  </x:context>
  <x:expect xmlns="http://www.w3.org/1999/xhtml" label="a div with a class should be created">
     <body class="home">
        <nav class="top"/>
         <main>
           <div class="acknowledgements component">...</div>
         </main>
        <nav class="bottom"/>
       </body>
  </x:expect>
</x:scenario>

<x:scenario label="When converting an acknowledgements with a label">
  <x:context xmlns="http://docbook.org/ns/docbook">
    <acknowledgements label="Boring">
      <info>
        <title>Some title</title>
      </info>
      <para>Content</para>
    </acknowledgements>
  </x:context>
  <x:expect xmlns="http://www.w3.org/1999/xhtml" label="a db-label should be added to the div">
     <body class="home">
        <nav class="top"/>
         <main>
           <div class="acknowledgements component" db-label="Boring">...</div>
         </main>
        <nav class="bottom"/>
       </body>
  </x:expect>
</x:scenario>

<x:scenario label="When converting an acknowledgements with a status">
  <x:context xmlns="http://docbook.org/ns/docbook">
    <acknowledgements status="draft">
      <info>
        <title>Some title</title>
      </info>
      <para>Content</para>
    </acknowledgements>
  </x:context>
  <x:expect xmlns="http://www.w3.org/1999/xhtml" label="the status becomes a class">
     <body class="home draft">
        <nav class="top"/>
         <main>
           <div class="acknowledgements component draft">...</div>
         </main>
        <nav class="bottom"/>
       </body>
  </x:expect>
</x:scenario>

